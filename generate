#!/usr/bin/env php
<?php
/**
 * Generate script.
 *
 * Generates file with randomized floating numbers.
 *
 * @package Saibamen/Generate-Sort-Numbers
 * @author  Adam "Saibamen" Stachowicz <saibamenppl@gmail.com>
 */

/**
 * If true - print more information
 *
 * @todo Read from console arguments
 */
define('DEBUG', true);

// TODO: Warn about CLI run only!

require_once('generate.inc.php');

$min = getNumberInput('Type minimum allowed number');
$max = getNumberInput('Type maximum allowed number');

// Switch min and max if min > max
checkSwitchGlobalMinMax();

$decimalPlaces = getNumberInput('Type number of decimal places');

// TODO: File size to generate

$filename = getFilenameInput('Type output filename (without extension)');

$outputString = generateRandomNumbers($min, $max, $decimalPlaces);

saveStringToFile($outputString, $filename);
